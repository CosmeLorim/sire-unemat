<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <% include ./parciais/head %>
    </head>
    <body>
        <div class="app-bar fixed-top" data-role="appbar">
            <a href="/" class="app-bar-element branding"><img src="/images/brazao-unemat-min.png" class="logo-brazao" alt="brazão UNEMAT"> </a>
            <a class="app-bar-element branding" href="/admin">Reservas de Equipamentos e Laboratórios</a>
            <span class="app-bar-element branding"><span id="temposessao"></span></span>
            <span class="app-bar-divider"></span>
            <div class="app-bar-element place-right">
                <span class="dropdown-toggle"><span class="mif-cog"></span> <%= usuario %></span>
                <div class="app-bar-drop-container padding10 place-right no-margin-top block-shadow fg-dark" data-role="dropdown" data-no-close="true" style="width: 220px">
                    <ul class="unstyled-list fg-dark">
                        <li>
                            <a href="/" class="fg-white3 fg-hover-yellow">Inicio</a>
                        </li>
                        <li>
                            <a href="/sair" id="sair" class="fg-white3 fg-hover-yellow">Deslogar</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="page-content">
            <div class="flex-grid" style="height: 100%;">
                <div class="row" style="height: 100%">
                    <div class="cell cell-sidebar" style="height: 100%">
                        <ul class="sidebar">
                            <li  class="active">
                                <a onclick="trocaConteudo('cursos');" href="#">
                                    <span class="mif-library icon"></span>
                                    <span class="title">Cursos</span>
                                </a>
                            </li>                            
                            <li>
                                <a onclick="trocaConteudo('tipos-objeto');" href="#">
                                    <span class="mif-tree icon"></span>
                                    <span class="title">Categorias</span>
                                </a>
                            </li>
                            <li>
                                <a onclick="trocaConteudo('objetos');" href="#">
                                    <span class="mif-equalizer icon"></span>
                                    <span class="title">Objetos</span>
                                </a>
                            </li>
                            <li>
                                <a onclick="trocaConteudo('usuarios');" href="#">
                                    <span class="mif-organization icon"></span>
                                    <span class="title">Usuários</span>
                                </a>
                            </li>
                            <li>
                                <a onclick="trocaConteudo('disciplinas');" href="#">
                                    <span class="mif-books icon"></span>
                                    <span class="title">Disciplinas</span>
                                </a>
                            </li>
                            <li>
                                <a onclick="trocaConteudo('periodos');" href="#">
                                    <span class="mif-warning icon"></span>
                                    <span class="title">Períodos</span>
                                </a>
                            </li>
                            <li>
                                <a onclick="trocaConteudo('Oferecimentos');" href="#">
                                    <span class="mif-unlink icon"></span>
                                    <span class="title">Oferecimentos</span>
                                </a>
                            </li>
                            <li><a onclick="trocaConteudo('reservas');" href="#">
                                    <span class="mif-bookmarks icon"></span>
                                    <span class="title">Reservas</span>
                                </a>
                            </li>
                            <li>
                                <a onclick="trocaConteudo('relatorios');" href="#">
                                    <span class="mif-table icon"></span>
                                    <span class="title">Relatórios</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="cell auto-size boas-vindas" id="conteudo">
                        
                    </div>
                </div>
            </div>
        </div>
    </body>
    <script src="js/jquery-3.2.1.min.js"></script>
    <script src="js/metro.js"></script>
    <script src="js/bootstrap-table.min.js"></script>
    <script src="js/bootstrap-table-pt-PT.js"></script>
    <script src="js/jquery.maskedinput.min.js"></script>
    <script src="js/cpf.min.js"></script>
    <script src="js/moment.min.js"></script>
    <script src="js/daterangepicker.js"></script>
    <script src="js/models.js"></script>
    <script src="js/md5.min.js" type="text/javascript"></script>
    <script src="js/select2.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $('.sidebar').on('click', 'li', function () {
                if (!$(this).hasClass('active')) {
                    $('.sidebar li').removeClass('active');
                    $(this).addClass('active');
                }
            });
        });

        function trocaConteudo(rota) {
            $.ajax({
                url: '/' + rota,
                cache: true,
                method: 'get',
                success: function (retorno) {
                    $('#conteudo').html(retorno);
                    $("#conteudo").css('background-image', 'none');
                }
            });
        }

        $('#sair').on('click', function()
        {
            localStorage.clear();
        })
    </script>

    <% include ./parciais/contador-regressivo %>
    <script>
        contadorRegressivo({ tempoSessao: <%= tempoSessao %>, destinoFimSessao: '/sair', elemento: 'temposessao' });
    </script>
    <% include ./utils/grid %>
</html>
